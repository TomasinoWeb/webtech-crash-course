generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  uuid     String @id @default(uuid())
  username String @unique
  hash     String
  salt     String
  tags     Tag[]
  tasks    Task[]
}

model Tag {
  uuid        String @id @default(uuid())
  name        String
  description String
  color       String
  user_uuid   String
  user        User   @relation(fields: [user_uuid], references: [uuid])
  tasks       Task[]
}

model Task {
  uuid        String   @id @default(uuid())
  name        String
  description String
  status      String
  due_date    DateTime @default(now())
  user_uuid   String
  tag_uuid    String
  user        User     @relation(fields: [user_uuid], references: [uuid])
  tag         Tag      @relation(fields: [tag_uuid], references: [uuid])
}
